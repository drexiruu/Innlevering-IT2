<script type="text/javascript">

	var formCount = 0;
	var svarResultat = document.getElementById("answer_result");
	var svarPrint = document.getElementById("answer_confirm");
	var finalResult = document.getElementById("quiz_box");
	var poeng = 0;

	function sjekkSvar() {

		var form =  document.forms[formCount];
		var svar = form.elements[0].value.toLowerCase();
		var navn = svar.split(" ");
		var fornavn = navn[0];
		var etternavn = navn[navn.length - 1];

		// Lager en array som inneholder alle riktige svar
		var riktigSvar = [
			//spørsmål 1 svar
			{ fornavn: "werner",
			  etternavn: "heisenberg"
			},
			//2
			{ fornavn: "galileo",
			  etternavn: "galilei"
			},
			//3
			{ fornavn: "marie",
			  etternavn: "curie"
			},
			//4
			{ fornavn: "stephen",
			  etternavn: "hawking"
			},
			//5
			{ fornavn: "neil",
			  etternavn: "tyson"
			}
		]

		var resultat;

		if (fornavn == riktigSvar[formCount].fornavn && etternavn == riktigSvar[formCount].etternavn) {
			resultat = "riktig";
			poeng += 2;
		} else if (fornavn == riktigSvar[formCount].fornavn || etternavn == riktigSvar[formCount].etternavn) {
			resultat = "delvis riktig";
			poeng += 1;
		} else { resultat = "feil"; poeng += 0;};

		form.style.display = "none";
		svarResultat.style.display = "flex"; 
		svarPrint.innerHTML = resultat + poeng;

	}

	function nesteSporsmaal() {

		formCount ++;
		var form =  document.forms[formCount];

		if (formCount <= 4) {
			form.style.display = "flex";
			svarResultat.style.display = "none";
		} else {
			finalResult.style.display = "flex";
			document.getElementById("total_poeng").innerHTML = poeng;
			svarResultat.style.display = "none";
		};

	}

</script>

