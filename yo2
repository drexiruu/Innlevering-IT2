	<!-- sjekker svaret -->
	<div id="answer_result" class="box" style="display: none;">
		<p id="answer_confirm"></p>
		<input type="submit" value="fortsett" onclick="nesteSporsmaal(); return false">
	</div>

	<!-- quiz resultat -->
	<div id="quiz_box" class="box" style="display: none;">
		<div id="heading">Quizen er ferdig.</div>
		<div class="subheading">Du fikk</div>
		<div class="points"><span id="total_poeng">x</span> av 10</div>
		<div class="subheading">poeng</div>
		<div class="buttons">
			<input type="submit" value="hjem" onclick="nesteSporsmaal(); return false">
			<input type="submit" value="igjen" onclick="nesteSporsmaal(); return false">
		</div>
